---
const { link } = Astro.props;
---

<section class="install-section">
    <h2>Installation</h2>

    <div class="install-options">
        <div class="install-card">
            <h3>CDN</h3>
            <div class="code-container">
                <code class="language-html">
                    {
                        `<link
                        rel="stylesheet"
                        href="${link}"
                        />`
                    }
                </code>
            </div>
        </div>
    </div>
</section>

<style>
    .language-html {
        background-color: transparent;
    }
    .install-section {
        margin: 3rem 0;
        padding: 2rem;
        background: rgba(255, 255, 255, 0.02);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    h2 {
        font-size: 2rem;
        margin: 0 0 2rem;
        color: rgb(var(--accent-light));
    }

    .install-options {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .install-card {
        background: #1a1a1a;
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    h3 {
        margin: 0 0 1rem;
        color: rgb(var(--accent-light));
        font-size: 1.25rem;
    }

    .code-wrapper {
        position: relative;
        background: rgba(0, 0, 0, 0.3);
        padding: 1rem;
        border-radius: 6px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .install-code {
        font-family: monospace;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.9rem;
        overflow-x: auto;
        white-space: pre-wrap;
        word-break: break-all;
    }

    .copy-btn {
        background: rgba(var(--accent), 0.2);
        color: rgb(var(--accent-light));
        border: 1px solid rgba(var(--accent), 0.3);
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.875rem;
        transition: all 0.2s;
        white-space: nowrap;
    }

    .copy-btn:hover {
        background: rgba(var(--accent), 0.3);
    }

    @media (max-width: 768px) {
        .install-section {
            padding: 1.5rem;
        }

        .code-wrapper {
            flex-direction: column;
            gap: 1rem;
            align-items: stretch;
        }

        .copy-btn {
            align-self: flex-end;
        }
    }
</style>
