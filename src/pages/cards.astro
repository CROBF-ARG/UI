---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Cards">
    <h1>Cards</h1>
    <p>Estos son los cards disponibles:</p>
    <div class="card">
        <img
            src="https://via.placeholder.com/300x200"
            alt="Ejemplo"
            class="card-img"
        />
        <div class="card-content">
            <h3 class="card-title">Título del Card</h3>
            <p class="card-description">
                Este es un card minimalista y funcional.
            </p>
        </div>
    </div>
    <pre>
    <code>
      {`
<div class="card">
  <img src="https://via.placeholder.com/300x200" alt="Ejemplo" class="card-img">
  <div class="card-content">
    <h3 class="card-title">Título del Card</h3>
    <p class="card-description">Este es un card minimalista y funcional.</p>
  </div>
</div>
      `}
    </code>
  </pre>
</Layout>
